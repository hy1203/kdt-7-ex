<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <script src="https://cdn.jsdelivr.net/npm/axios/dist/axios.min.js"></script>
    <title>Document</title>
  </head>
  <body>
    <form name="login">
      <fieldset>
        <legend>로그인</legend>
        <label for="id"
          >ID:
          <input type="text" id="id" name="id" placeholder="아이디" />
        </label>
        <br />
        <label for="pw"
          >PASSWORD:
          <input
            type="password"
            name="pw"
            id="pw"
            placeholder="비밀번호"
          /> </label
        ><br />
        <button type="button" onclick="loginBtn()">로그인</button>
      </fieldset>
    </form>
    <form action="/ex/profile" method="POST" name="form_info">
      <input type="hidden" id="id" />
    </form>
    <script>
      function loginBtn() {
        const form = document.forms["login"];
        if (form.id.value.length === 0 || form.pw.value.length === 0) {
          alert("아이디와 비밀번호를 입력하세요!");
          return;
        }
        axios({
          method: "POST",
          url: "/ex/loginenter",
          data: {
            id: form.id.value,
            pw: form.pw.value,
          },
        }).then((res) => {
          console.log(res.data);
          return res.data;
        });
      }
    </script>
  </body>
</html>
